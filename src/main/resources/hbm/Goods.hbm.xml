<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.groupfour.entity.Goods" table="goods" schema="test">
        <id name="gid">
            <column name="gid" sql-type="int(11)"/>
            <generator class="native"/>
        </id>
        <many-to-one name="user" class="com.groupfour.entity.User">
            <column name="uid"/>
        </many-to-one>
        <many-to-one name="classify" class="com.groupfour.entity.Classify">
            <column name="cid"/>
        </many-to-one>
        <property name="category">
            <column name="category" sql-type="char(20)" length="20" />
        </property>
        <property name="gname" not-null="true">
            <column name="gname" sql-type="char(20)" length="20"/>
        </property>
        <property name="parea">
            <column name="parea" sql-type="int(11)" />
        </property>
        <property name="price">
            <column name="price" sql-type="float" precision="-1" />
        </property>
        <property name="con">
            <column name="con" sql-type="int(11)" />
        </property>
        <property name="area">
            <column name="area" sql-type="float" precision="-1" />
        </property>
        <property name="picture">
            <column name="picture" sql-type="varchar(256)" />
        </property>
        <property name="content">
            <column name="content" sql-type="char(20)" length="20" />
        </property>
        <property name="phone">
            <column name="phone" sql-type="char(20)" length="20" />
        </property>
        <property name="descript">
            <column name="descript" sql-type="text" />
        </property>
        <property name="rtime">
            <column name="rtime" sql-type="time" />
        </property>
        <property name="stock">
            <column name="stock" sql-type="int(11)" />
        </property>
        <property name="state" not-null="true">
            <column name="state" sql-type="char(1)" length="1"/>
        </property>
        <property name="ctime" not-null="true">
            <column name="ctime" sql-type="time"/>
        </property>
    </class>
</hibernate-mapping>