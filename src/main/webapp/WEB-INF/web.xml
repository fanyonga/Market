<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Market</display-name>
  <servlet>
    <servlet-name>Struts2</servlet-name>
    <servlet-class>org.apache.struts2.dispatcher.servlet.StrutsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Struts2</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
    <!--两个月的超时时间-->
    <session-config>
        <session-timeout>86400</session-timeout>
    </session-config>
    <!-- 错误跳转页面 -->
    <error-page>
        <error-code>500</error-code>
        <location>/static/error/500.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/static/error/404.html</location>
    </error-page>
</web-app>
